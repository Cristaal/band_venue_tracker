<h1><%= @band.name() %></h1>

<h3> Choose the venues where this band has played</h3>

<% if @venues.any?() %>
<form action="/bands/<%= @band.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <% @venues.each() do |venue| %>
  <div class="checkbox">
    <label>
      <input type="checkbox" name="venue_id[]" value="<%= venue.id() %>"><%= venue.name() %>
    </label>
  </div>
  <% end %>
  <button type="submit">Add a venue</button>
</form>
<% end %>

<% if @band.venues().any?() %>
<h3>Here are the venues where this band has played:</h3>

<ul>
  <% @band.venues().each() do |venue| %>
  <li><%= venue.name() %></li>
  <% end %>
</ul>


  <a href='/'>Click here to go to the main page</a>

<% end %>
